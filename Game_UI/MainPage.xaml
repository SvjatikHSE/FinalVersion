<Page x:Class="Game_of_brains_UI.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Game_of_brains_UI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage" >

    <Grid Opacity="0.5" >
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox Name="TeamName" Text="Enter team name" Grid.Row="2" Height="30" Width="200" Foreground="Gray" TextAlignment="Center" FontSize="20" GotFocus="TeamName_GotFocus"/>
        <Button Name="StartButton" Content="Start" Click="Button_Click" Grid.Row="3" Height="30" Width="100" /> 


    </Grid>
</Page>
