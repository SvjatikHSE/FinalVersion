<Page x:Class="Game_UI.ViewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Game_UI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90*"/>
            <RowDefinition Height="320*"/>
            <RowDefinition Height="60*"/>
        </Grid.RowDefinitions>
        <Button Height="50" HorizontalAlignment="Left" FontSize="38" FontFamily="Constantia" Foreground="#F2F2F2" Margin="30 20 0 0" Background="#FF7C7575" OpacityMask="#FFF3E7E7" Opacity="0.8" Click="BackButton_Click">Назад</Button>
        <TextBlock Name="PackNameTextBlock" Foreground="#f2f2f2"  FontSize="40" FontFamily="Constantia"  HorizontalAlignment="Center" VerticalAlignment="Center" Margin="58,4"/>
        <Rectangle Grid.Row="1" Fill="Black" OpacityMask="#FF0F0F0F" Opacity="0.6"  Margin="10 0 10 10" IsHitTestVisible="False" ></Rectangle>
       
        <TextBlock VerticalAlignment="Center" Name="QuestTextBlock" Grid.Row="1"  FontSize="35" FontFamily="Constantia" Foreground="#fff" Margin="20 5" TextWrapping="Wrap" ></TextBlock>
        <Image Grid.Row="1" VerticalAlignment="Top" Name="QuestionImage" Visibility="Hidden"/>
        <StackPanel Orientation="Horizontal" Grid.Row="5" HorizontalAlignment="Center">
            <Button Name="AnswButton" Content="Ответ" Margin="0 5 20 5"  Height="55" Width="370" VerticalAlignment="Center"  Background="#333333" Foreground="#BDBDBD" FontSize="40" FontFamily="Constantia" Click="AnswButton_Click" />
            <Button Name="ImageButton" Content="Изображение" Margin="0 5 0 5"  Height="55" Width="300" VerticalAlignment="Center"  Background="#333333" Foreground="#BDBDBD" FontSize="40" FontFamily="Constantia" Visibility="Hidden" Click="ImageButton_Click" />
            <Button Name="QuestButton" Content="Вопрос" Margin="20 5 0 5" Height="55" Width="370" VerticalAlignment="Center"  Background="#333333" Foreground="#BDBDBD" FontSize="40" FontFamily="Constantia" IsEnabled="False" Click="QuestButton_Click" />
        </StackPanel>
    </Grid>
</Page>
